@model CartPageVM
@{ ViewBag.Title = "CartPage";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="jumbotron">
    Odemeniz gereken tutar => @Model.Cart.TotalPrice ... Siparişi onaylamak icin lütfen @Html.ActionLink("tıklayınız", "SiparisiOnayla")
</div>

<div class="row product-list">


    @foreach (CartItem item in Model.Cart.Sepetim)
    {
<div class="col-md-4">
    <section class="panel">
        <div class="pro-img-box">

            @if (item.ImagePath == null)
            {
<img src="~/Pictures/47a8571d-433b-4820-8e67-97c1a9490f89.jpg" alt="Resim yok" width="100" height="300" title="@item.Name" /> }
else
{
<img src="@item.ImagePath" alt="Resim yok" width="100" height="300" title="@item.Name" />}

            <a href="@Url.Action("DeleteFromCart",new { id=item.ID})" class="btn btn-danger">
                Delete
            </a>
            <a href="@Url.Action("AddToCart",new { id=item.ID})" class="btn btn-success">
                Add
            </a>
        </div>
        <div class="panel-body text-center">
            <h4>
                <a href="#" class="pro-title" title="@item.Name">
                    @item.Name x @item.Amount
                </a>
            </h4>
            <p class="price">$@item.SubTotal</p>
        </div>
    </section>
</div>}
    <div>
        <a href="@Url.Action("ShoppingList", new {@class="btn btn-info" })">Back to Shopping List</a>
    </div>






</div>
@section Sepet{
    <li>
        <a href="@Url.Action("CartPage","Shopping")">
            <i class="icon-shopping-cart"></i> Cart
        </a>
    </li>

}
