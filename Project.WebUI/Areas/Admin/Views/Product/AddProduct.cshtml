@model ProductVM
@{ ViewBag.Title = "AddProduct";
                Layout = "~/Views/Shared/_Layout.cshtml"; }


<style>
    .field-validation-error {
        color: orangered;
    }
</style>


<div class="panel-body">
    <div class="form">
        @using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { @class = "cmxform form-horizontal tasi-form", enctype = "multipart/form-data" }))
        {
<div class="form-group ">
    <label for="firstname" class="control-label col-lg-2">ProductName</label>
    <div class="col-lg-3">
        @Html.TextBoxFor(x => x.Product.ProductName, new { @class = "form-control genislik" })
        <br />
        @Html.ValidationMessageFor(x => x.Product.ProductName)
    </div>
</div>
                <div class="form-group ">
                    <label for="lastname" class="control-label col-lg-2">UnitPrice</label>
                    <div class="col-lg-3">
                        @Html.TextBoxFor(x => x.Product.UnitPrice, new { @class = "form-control genislik", type = "number" })
                        <br />
                        @Html.ValidationMessageFor(x => x.Product.UnitPrice)
                    </div>
                </div>
                                <div class="form-group ">
                                    <label for="username" class="control-label col-lg-2">Category</label>
                                    <div class="col-lg-3">
                                        @Html.DropDownListFor(x => x.Product.CategoryID, new SelectList(Model.Categories, "ID", "CategoryName"), "Lutfen Seciniz")

                                    </div>
                                </div>
                                                <div class="form-group ">
                                                    <label for="password" class="control-label col-lg-2">UrunStok</label>
                                                    <div class="col-lg-3">
                                                        @Html.TextBoxFor(x => x.Product.UnitsInStock, new { @class = "form-control", type = "number" })
                                                    </div>
                                                </div>



                                                                <div class="form-group">
                                                                    <label class="control-label col-lg-2">Image Upload</label>
                                                                    <div class="col-md-9">
                                                                        <div class="fileupload fileupload-new" data-provides="fileupload">
                                                                            <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
                                                                                <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt="" />
                                                                            </div>
                                                                            <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                                                                            <div>
                                                                                <span class="btn btn-white btn-file">
                                                                                    <span class="fileupload-new"><i class="icon-paper-clip"></i> Select image</span>
                                                                                    <input name="resim" type="file" class="default" />
                                                                                </span>
                                                                                
                                                                            </div>
                                                                        </div>

                                                                    </div>
                                                                </div>




                                                                                <div class="form-group">
                                                                                    <div class="col-lg-offset-2 col-lg-10">
                                                                                        <button class="btn btn-danger" type="submit">Save</button>
                                                                                        @Html.ActionLink("Cancel", "ProductList", null, new { @class = "btn btn-default" })

                                                                                    </div>
                                                                                </div>}



    </div>
</div>


